<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.mapper.MemberMapper">
	<insert id="insert" parameterType="MemberVO">
		INSERT INTO MEMBER(ID, PASSWORD, NAME) VALUES(#{id}, #{password}, #{name})
	</insert>
	
	<select id="selectIdPw" parameterType="map" resultType="int">
		SELECT COUNT(ID) FROM MEMBER WHERE ID=#{id} AND PASSWORD=#{password}
	</select>	
	
	<select id="selectId" parameterType="String" resultType="MemberVO">
		SELECT * FROM MEMBER WHERE ID=#{id}
	</select>
</mapper>